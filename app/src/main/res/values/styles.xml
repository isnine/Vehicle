<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <style name="Register_Input">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/base_edit_input</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base_action_bar_height</item>
        <item name="android:layout_marginTop">@dimen/register_margin</item>
        <item name="android:layout_marginLeft">@dimen/register_margin</item>
        <item name="android:layout_marginRight">@dimen/register_margin</item>
    </style>
    <style name="Smile_TextView_Black">
        <item name="android:textColor">@color/base_color_text_black</item>
    </style><style name="Register_Edit">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:layout_weight">1.0</item>
    <item name="android:layout_marginLeft">@dimen/register_margin</item>
    <item name="android:background">@color/transparent</item>
</style>
    <style name="csy_row_icon">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">@dimen/csy_icon_w</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:scaleType">center</item>
    </style>
    <style name="csy_textbox">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/csy_text</item>
        <item name="android:textColorHint">@color/csy_hint</item>
        <item name="android:background">@drawable/csy_textbox</item>
        <item name="android:textSize">@dimen/csy_text_ts</item>
    </style>
    <style name="csy_textbox1" parent="csy_textbox">
        <item name="android:layout_marginRight">@dimen/csy_icon_w</item>
    </style>
    <style name="csy_row_label">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_width">@dimen/csy_label_w</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/csy_label</item>
    </style>
    <style name="csy_row">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/csy_row_h</item>
        <item name="android:paddingLeft">@dimen/csy_pd</item>
    </style>

    <style name="csy_row1" parent="csy_row">
        <item name="android:background">@drawable/csy_form_row</item>
    </style>

    <style name="Smile">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Smile.TextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Smile.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base_action_bar_height</item>
    </style>

    <style name="Smile.View_margin">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="Smile.ImageView">
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="Smile.ImageView.Photo_Large">
        <item name="android:layout_width">75dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>
    <style name="Smile.ImageView.Photo_Middle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="Smile.ImageView.Photo_Small">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="Smile.Button.theme" parent="Smile.TextView._White">
        <item name="android:background">@drawable/btn_login_selector</item>
    </style>

    <style name="Smile.Button.logout" parent="Smile.TextView._White">
        <item name="android:background">@drawable/btn_logout_selector</item>
    </style>

    <style name="Smile.TextView._Orange">
        <item name="android:textColor">@color/dialog_color_title</item>
    </style>

    <style name="Smile.TextView._White">
        <item name="android:textColor">@color/base_color_text_white</item>
    </style>

    <style name="Smile.TextView._Gray">
        <item name="android:textColor">@color/base_color_text_gray</item>
    </style>

    <style name="Smile.TextView._Black">
        <item name="android:textColor">@color/base_color_text_black</item>
    </style>

</resources>
